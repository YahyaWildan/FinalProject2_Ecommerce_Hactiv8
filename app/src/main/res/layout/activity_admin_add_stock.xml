<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddStock">

    <EditText
        android:id="@+id/edtIdAddStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Enter Item ID"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        />

    <EditText
        android:id="@+id/edtQuantityAddStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtIdAddStock"
        android:hint="Enter Item ID"
        android:layout_marginTop="100sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Given Quantity To The Mentioned Item"
        android:textSize="12dp"
        android:background="@drawable/purple_custom_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtQuantityAddStock"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        />
    >

</androidx.constraintlayout.widget.ConstraintLayout>