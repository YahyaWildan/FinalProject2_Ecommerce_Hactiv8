<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin">

    
    <EditText
        android:id="@+id/edtAdminUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="UserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"/>

    <EditText
        android:id="@+id/edtAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtAdminUserName"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"/>

    <Button
        android:id="@+id/btnLoginAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login As Admin"
        android:background="@drawable/purple_custom_button"
        app:layout_constraintTop_toBottomOf="@+id/edtAdminPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"/>

    <TextView
        android:id="@+id/tvAdmintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We wish you a happy working day"
        app:layout_constraintTop_toBottomOf="@id/btnLoginAdmin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>